{
  // Utilise l'interpréteur du projet (évite les "Import could not be resolved")
  "python.defaultInterpreterPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
  // Pylance voit bien les libs installées dans le venv
  "python.analysis.extraPaths": [
    "${workspaceFolder}\\.venv\\Lib\\site-packages"
  ],
  // Active le venv dans le terminal intégré
  "python.terminal.activateEnvironment": true,
  // Type checking plus relax pour Streamlit/pandas
  "python.analysis.typeCheckingMode": "basic"
}